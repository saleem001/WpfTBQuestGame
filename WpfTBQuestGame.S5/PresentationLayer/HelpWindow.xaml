<Window x:Class="WpfTheAionProject.PresentationLayer.HelpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTheAionProject.PresentationLayer"
        mc:Ignorable="d"
        Title="Help" Height="450" Width="800">
    <Grid>
        <TextBlock 
            HorizontalAlignment="Left" 
            Margin="10,10,0,0" 
            TextWrapping="Wrap" 
            Text="You have to defeat the Night King. In order to do that, move around the board using the buttons on the right hand of the screen to make your way around Westeros. Defeat dangers on your way to other houses and ask them to join you or if they can give you some resources. You gain XP by defeating dangers and gaining allies. You will need an experience level of 10 before you can face the Night King successfully. You can save your progress any time and come back to it by clicking the SAVE button." 
            VerticalAlignment="Top"/>
        <Button 
            Content="Exit" 
            HorizontalAlignment="Left" 
            Margin="10,135,0,0" 
            VerticalAlignment="Top" 
            Width="75" Click="Button_Click"/>
    </Grid>
</Window>
